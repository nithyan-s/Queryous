# Queryous Authentication Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# For SQLite (Development)
DATABASE_URL=sqlite:///./queryous_auth.db

# For PostgreSQL (Production)
# DATABASE_URL=postgresql://username:password@localhost:5432/queryous_auth

# For MySQL (Production)
# DATABASE_URL=mysql+pymysql://username:password@localhost:3306/queryous_auth

# =============================================================================
# JWT CONFIGURATION
# =============================================================================

# Generate a secure secret key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secure-secret-key-here-change-this-in-production

# Token expiration times (in minutes/days)
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# OAUTH PROVIDERS
# =============================================================================

# Google OAuth Configuration
# Get credentials from: https://console.developers.google.com/
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth Configuration  
# Get credentials from: https://github.com/settings/applications/new
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# =============================================================================
# SMS CONFIGURATION (Twilio)
# =============================================================================

# Get credentials from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Frontend URL for OAuth redirects
FRONTEND_URL=http://localhost:5173

# API Configuration
API_HOST=localhost
API_PORT=8001

# Environment
ENVIRONMENT=development

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Rate limiting
MAX_LOGIN_ATTEMPTS=5
OTP_EXPIRY_MINUTES=10
PASSWORD_MIN_LENGTH=8

# Session configuration
SESSION_TIMEOUT_MINUTES=60

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable authentication features
ENABLE_EMAIL_REGISTRATION=true
ENABLE_OAUTH_LOGIN=true
ENABLE_PHONE_VERIFICATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_TWO_FACTOR_AUTH=false

# =============================================================================
# LOGGING
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log file path (optional)
LOG_FILE=logs/queryous.log

